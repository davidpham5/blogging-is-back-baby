---
permalink: /turbo-links/feed.xml
eleventyExcludeFromCollections: true
---
{% set postsList = raindrop.articles | limit(100) %}<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-GB">
    <title type="text">Turbo Links by {{metadata.author.shortname or metadata.author.name}}</title>
    <subtitle type="text">Turbocharged hyperlinks - chaos desires order, links to things that happened.</subtitle>

    <id>https://davidchicopham.com/turbo-links/feed.xml</id>
    <link rel="alternate" type="text/html" href="{{ metadata.url }}/turbo-links/" />
    <link rel="self" type="application/atom+xml" href="https://davidchicopham.com/turbo-links/feed.xml" />

    <updated>{{ postsList[0].date | dateToFormat('iso') }}</updated>
    <author>
        <name>{{ metadata.author.name }}</name>
        <email>{{ metadata.author.email }}</email>
    </author>
    <generator uri="https://www.11ty.dev/">Eleventy.js</generator>
    {%- for link in postsList %}
        {%- if loop.index0 "<" 500 -%}
            <entry>
                <title>{{ link.title }}</title>
                <link href="{{ link.source_url }}"/>
                <updated>{{ link.date | dateToFormat('iso') }}</updated>
                <id>{{ link.source_url }}</id>
                <content type="html">
                    <![CDATA[{{ link.excerpt }}]]>
                </content>
            </entry>
        {%- endif -%}
    {%- endfor %}
</feed>
